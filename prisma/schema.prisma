generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

// Define your models here
model Admin {
  id        Int      @id @default(autoincrement())
  loginId   String   @unique @db.Char(8)
  email     String   @unique
  name      String?
  phone     String
  password  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([loginId])
}
